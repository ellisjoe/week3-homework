<h2>Edit Place</h2>

<form class="form-horizontal" action="/places/<%= @place.id %>/update">

    <div class="form-group">
        <label for="title" class="col-sm-4 control-label">Title</label>
        <div class="col-sm-5">
            <%= text_field_tag 'title', @place.title, class: "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <label for="photo_url" class="col-sm-4 control-label">Photo URL</label>
        <div class="col-sm-5">
            <%= text_field_tag 'photo_url', @place.photo_url, class: "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <label for="admission_price" class="col-sm-4 control-label">Admission Price</label>
        <div class="col-sm-5">
            <%= text_field_tag 'admission_price', @place.admission_price, class: "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <label for="description" class="col-sm-4 control-label">Description</label>
        <div class="col-sm-5">
            <%= text_area_tag 'description', @place.description, rows: 3, class: "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-5">
            <button type=submit" class="btn btn-default">Update</button>
        </div>
    </div>

</form>
